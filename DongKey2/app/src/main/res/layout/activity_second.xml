<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SecondActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="70dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/explanation1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans_bold"
            android:text="동키는 당신이 원하는 조건에\n딱 맞는 동네를 추천해드립니다."
            android:textColor="#FC332F28"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/explanation2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans_bold"
            android:text="원하시는 조건을 입력하시고,\n최적의 동네를 찾아보세요!"
            android:textColor="#FC332F28"
            android:layout_marginTop="20dp"
            android:textSize="20sp" />


    </LinearLayout>

    <ImageView
        android:id="@+id/dongkey_second"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:src="@drawable/dongkey" />

    <Button
        android:id="@+id/begin_button"
        android:layout_width="167dp"
        android:layout_height="47dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:background="@drawable/start" />



</LinearLayout>